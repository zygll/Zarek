/* 文章列表样式 */

.container {
  padding: 0 24rpx;
  background-color: #fff;
  font-family: Microsoft YaHei, Helvetica, Arial, sans-serif;
  border-radius: 10rpx;
}

.post-list {
  margin-bottom: 24rpx;
}

.post-item {
  display: flex;
  border-bottom: 1px solid #f5f7f7;
  padding: 24rpx 0;
  overflow: hidden;
}

.post-img {
  width: 200rpx;
  height: 160rpx;
  border-radius: 10rpx;
  flex: 0 0 30%;
}

.post-desc {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  height: 80rpx;
  margin-bottom: 20rpx;
}

.post-title>text {
  
  font-size: 30rpx;
  line-height: 1.6;
  font-weight: 500;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-data {
  display: flex;
  align-items: center;
}

.post-data>image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 6rpx;
}

.post-data>text {
  margin-right: 32rpx;
  font-size: 22rpx;
}

.post-data-date {
  display: flex;
  align-items: right;
}

.avatarInfo{

  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 9;
  color: #fff;
}
.homename{
  text-align: center;
  font-size: 48rpx;
  z-index: 999;
  color: #fff;
  position: absolute;
  top: 18%;
  left: 5%;
  font-weight: 900;
  font-family: 'JinBuTi';
}

.description{
  text-align: center;
  font-size: 30rpx;
  font-weight: 300;
  font-family: 'SmileySans';
}